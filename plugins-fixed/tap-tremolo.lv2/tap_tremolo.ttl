@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix time: <http://lv2plug.in/ns/ext/time#>.

<http://moddevices.com/plugins/tap/tremolo>
a lv2:Plugin, lv2:ModulatorPlugin;

doap:name "TAP Tremolo";

doap:developer [
    foaf:name "Tom Szilagyi";
    foaf:homepage <http://tap-plugins.sourceforge.net/>;
    foaf:mbox <mailto:tsziagyi@users.sourceforge.net>;
    ];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
    ];

mod:brand "TAP";
mod:label "Tremolo";

doap:license <http://usefulinc.com/doap/licenses/gpl>;
lv2:optionalFeature lv2:hardRTCapable;


lv2:minorVersion 7;
lv2:microVersion 3;

rdfs:comment """
The Tremolo effect is one of the oldest effects for guitar. It was created around the 1940s when the effect was added to tube amplifiers. This is a great straightforward tremolo with easy controls, suitable for use with any instrument. 

Features:
Modeled by TAP
""";

lv2:port
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 0;
    lv2:symbol "frequency";
    lv2:name "Frequency";
    lv2:shortName "Rate" ;
    lv2:portProperty mod:tapTempo;
    lv2:default 5.0;
    lv2:minimum 0.0;
    lv2:maximum 20.0;

    units:unit units:hz ;
],
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 1;
    lv2:symbol "depth";
    lv2:name "Depth";
    lv2:default 50.0;
    lv2:minimum 0.0;
    lv2:maximum 100.0;
    units:unit units:pc ;
],
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 2;
    lv2:symbol "gain";
    lv2:name "Gain";
    lv2:shortName "Level" ;
    lv2:default 0.0;
    lv2:minimum -70.0;
    lv2:maximum 20.0;
    units:unit units:db ;

],
[
    a lv2:InputPort, lv2:AudioPort;
    lv2:index 3;
    lv2:symbol "input_0";
    lv2:name "Input_0";
],
[
    a lv2:OutputPort,  lv2:AudioPort;
    lv2:index 4;
    lv2:symbol "output_0";
    lv2:name "Output_0";
].
